<h1>Listing payment_details</h1>

<table>
  <tr>
    <th>Card type</th>
    <th>Issue date</th>
    <th>Card holder name</th>
    <th>Credit card number</th>
    <th>Expiration date</th>
    <th>Security code</th>
  </tr>

<% @payment_details.each do |payment_detail| %>
  <tr>
    <td><%=h payment_detail.card_type %></td>
    <td><%=h payment_detail.issue_date %></td>
    <td><%=h payment_detail.card_holder_name %></td>
    <td><%=h payment_detail.credit_card_number %></td>
    <td><%=h payment_detail.expiration_date %></td>
    <td><%=h payment_detail.security_code %></td>
    <td><%= link_to 'Show', payment_detail %></td>
    <td><%= link_to 'Edit', edit_payment_detail_path(payment_detail) %></td>
    <td><%= link_to 'Destroy', payment_detail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

