<table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
    <% unless @bookings.blank? %>
      <tr>
         <th class="table-header-repeat line-left minwidth-1"><a href="#">ORDER ID</a></th>
        <th class="table-header-repeat line-left minwidth-1"><a href="#">ORDER DATE</a></th>
        <th class="table-header-repeat line-left"><a href="#">ORDER DUE</a></th>
        <th class="table-header-repeat line-left"><a href="#">ITEMS</a></th>
        <th class="table-header-repeat line-left"><a href="#">STATUS</a></th>
        <th class="table-header-repeat line-left"><a href="#">COST</a></th>
      </tr>
