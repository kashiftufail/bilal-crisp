<% content_for :head do %>
  <%= javascript_include_tag 'jquery.jqtransform' %>
  <%= stylesheet_link_tag 'jqtransform' %>
<% end %>
<div id="content">
  <div id="content_c1">
    <h1>Change Password</h1>
  </div>

  <div id="content_c2">
    <div class="edit-form" id="register">
      <% if flash %>
        <%= flash[:notice] || flash[:error] %>
      <% end %>
      <%= form_tag :action => 'reset_password' do %>

        <%= label_tag "New Password" %>
        <div class="txtbox">
          <%= password_field_tag :new_password %>
        </div>
        <br class="clearfloat" />

        <%= label_tag "Confirm Password" %>
        <div class="txtbox">
          <%= password_field_tag :confirm_password %>
        </div>
        <br class="clearfloat" />
        <%= hidden_field_tag 'code', params[:code] %>

        <%= submit_tag 'Update' %>
      <% end %>
    </div>
  </div>

  <br class="clearfloat" />
</div>

<br class="clearfloat" />
<div id="peach_bar_wrapper">
</div>
